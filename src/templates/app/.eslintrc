{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "settings": {
    "import/resolver":{
      "babel-module":{
        "config":{
          "root": ["./src", "./"],
          "alias": {
            "api/fixtures": "./src/shared/api/fixtures",
            "api/http": "./src/shared/api/http"
          }
        }
      }
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "comma-dangle": ["error", "never"]
  }
}
